<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="view_country_brand_application_form" name="Country Brand Application Form">
            <t t-call="website.layout">
                <div class="container">
                    <h1>Country Brand Application Form</h1>
                    <form action="/process/country_brand/application_submit" method="post"
                        enctype="multipart/form-data" class="form-horizontal">
                        <!-- <t t-call="website.csrf_token"/> -->
                        <div class="row">
                            <!-- First column -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="person_type">Person Type</label>
                                    <select name="person_type" class="form-control" required='True'>
                                        <option value="national_cuban">National Cuban</option>
                                        <option value="national_foreign">National Foreign</option>
                                        <option value="legal_cuban">Legal Cuban</option>
                                        <option value="legal_foreign">Legal Foreign</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="entity_type">Entity Type</label>
                                    <select name="entity_type" class="form-control" required='True'>
                                        <option value="state">State</option>
                                        <option value="private">Private</option>
                                        <option value="mixed">Mixed</option>
                                        <option value="others">Others</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="full_name">Full Name / Official Denomination</label>
                                    <input type="text" name="full_name" class="form-control"
                                        required='True' maxlength="120" />
                                </div>
                                <div class="form-group">
                                    <label for="id_number">ID/REUP/NIT/Passport</label>
                                    <input type="text" name="id_number" class="form-control"
                                        required='True' maxlength="12" />
                                </div>
                                <div class="form-group">
                                    <label for="phone">Phone</label>
                                    <input type="text" name="phone" class="form-control"
                                        maxlength="15" />
                                </div>
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input type="email" name="email" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label for="website">Website</label>
                                    <input type="text" name="website" class="form-control"
                                        maxlength="120" />
                                </div>
                                <div class="form-group">
                                    <label for="social_profiles">Social Media Profiles</label>
                                    <input type="text" name="social_profiles" class="form-control"
                                        maxlength="120" />
                                </div>
                                <div class="form-group">
                                    <label for="address">Address</label>
                                    <input type="text" name="address" class="form-control"
                                        required='True' maxlength="120" />
                                </div>
                                <div class="form-group mt-1 mb-1"  >
                                    <label for="legal_certification">Legal Certification</label>
                                    <input type="file" name="legal_certification"
                                        class="form-control-file" required='True' />
                                </div>
                                
                            </div>

                            <!-- Second column -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="country_id">Country</label>
                                    <select name="country_id" class="form-control">
                                        <!-- Populate dynamically with countries -->
                                        <option value="cuba">Cuba</option>
                                        <option value="other">Other Country</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="province_id">Province</label>
                                    <select name="province_id" class="form-control" required='True'>
                                        <!-- Populate dynamically with provinces -->
                                        <option value="havana">Havana</option>
                                        <option value="other">Other Province</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="municipality_id">Municipality</label>
                                    <select name="municipality_id" class="form-control"
                                        required='True'>
                                        <!-- Populate dynamically with municipalities -->
                                        <option value="plaza">Plaza</option>
                                        <option value="other">Other Municipality</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="postal_code">Postal Code</label>
                                    <input type="text" name="postal_code" class="form-control"
                                        maxlength="10" />
                                </div>
                                <div class="form-group">
                                    <label for="commercial_registration">Commercial Registration</label>
                                    <input type="text" name="commercial_registration"
                                        class="form-control" required='True' maxlength="120" />
                                </div>
                                <div class="form-group">
                                    <label for="cup_account_number">CUP Account Number</label>
                                    <input type="text" name="cup_account_number"
                                        class="form-control" maxlength="16" />
                                </div>
                                <div class="form-group">
                                    <label for="cup_bank_branch">CUP Bank Branch</label>
                                    <input type="text" name="cup_bank_branch" class="form-control"
                                        required='False' maxlength="120" />
                                </div>
                                <div class="form-group">
                                    <label for="mlc_account_number">MLC Account Number</label>
                                    <input type="text" name="mlc_account_number"
                                        class="form-control" maxlength="16" />
                                </div>
                                <div class="form-group">
                                    <label for="mlc_bank_branch">MLC Bank Branch</label>
                                    <input type="text" name="mlc_bank_branch" class="form-control"
                                        required='False' maxlength="120" />
                                </div>
                                <div class="form-group">
                                    <label for="mlc_account_number">Convertible Currency Account
                                        Number</label>
                                    <input type="text" name="mlc_account_number"
                                        class="form-control" maxlength="16" />
                                </div>
                                <div class="form-group">
                                    <label for="mlc_bank_branch">Convertible Currency Bank Branch</label>
                                    <input type="text" name="mlc_bank_branch" class="form-control"
                                        required='False' maxlength="120" />
                                </div>
                                <div class="form-group">
                                    <label for="representation_license">Commercial Representation
                                        License</label>
                                    <input type="text" name="representation_license"
                                        class="form-control" maxlength="120" />
                                </div>
                            </div>
                        </div>

                        <!-- Datos del Representante Legal -->
                        <h3>Legal Representative Data</h3>
                        <div class="row">
                            <!-- First column -->
                            <div class="col-md-6">
                                <!-- Nombre del Representante -->
                                <div class="form-group">
                                    <label for="representative_name">Full Name</label>
                                    <input type="text" name="representative_name"
                                        class="form-control"
                                        maxlength="120" required="true" />
                                </div>

                                <!-- CI/REUP/NIT/Pasaporte del Representante -->
                                <div class="form-group">
                                    <label for="representative_id">ID/REUP/NIT/Passport</label>
                                    <input type="text" name="representative_id" class="form-control"
                                        maxlength="12" required="true" />
                                </div>

                                <!-- Correo Electrónico del Representante -->
                                <div class="form-group">
                                    <label for="representative_email">Email</label>
                                    <input type="email" name="representative_email"
                                        class="form-control"
                                        required="true" />
                                </div>

                                <!-- Dirección del Representante -->
                                <div class="form-group">
                                    <label for="representative_address">Address</label>
                                    <input type="text" name="representative_address"
                                        class="form-control"
                                        maxlength="120" required="true" />
                                </div>

                                <!-- Aval de Representación Legal -->
                                <div class="form-group mt-1 mb-1">
                                    <label for="representation_certificate">Legal Representation
                                        Certificate</label>
                                    <input type="file" name="representation_certificate"
                                        class="form-control-file" required="true" />
                                </div>
                                
                            </div>
                            <!-- Second column -->
                            <div class="col-md-6">
                                <!-- País del Representante -->
                                <div class="form-group">
                                    <label for="representative_country">Country</label>
                                    <select name="representative_country" class="form-control"
                                        required="true">
                                        <!-- Populate dynamically -->
                                    </select>
                                </div>

                                <!-- Provincia del Representante -->
                                <div class="form-group">
                                    <label for="representative_province">Province</label>
                                    <select name="representative_province" class="form-control"
                                        required="true">
                                        <!-- Populate dynamically -->
                                    </select>
                                </div>

                                <!-- Municipio del Representante -->
                                <div class="form-group">
                                    <label for="representative_municipality">Municipality</label>
                                    <select name="representative_municipality" class="form-control"
                                        required="true">
                                        <!-- Populate dynamically -->
                                    </select>
                                </div>

                                <!-- Código Postal del Representante -->
                                <div class="form-group">
                                    <label for="representative_postal_code">Postal Code</label>
                                    <input type="text" name="representative_postal_code"
                                        class="form-control" maxlength="10" />
                                </div>
                            </div>
                        </div>


                        <!-- Información acerca del uso de la marca país -->
                        <h3>Information about the use of the country brand </h3>

                        <!-- Tipo de Uso de la Marca País -->
                        <div class="form-group">
                            <label for="usage_type">Usage Type</label>
                            <select name="usage_type" class="form-control" required="true">
                                <option value="organizational">Organizational</option>
                                <option value="goods_services">Goods and Services</option>
                                <option value="events">Events</option>
                            </select>
                        </div>

                        <!-- Aplicaciones -->
                        <!-- Si es para uso organizacional -->
                        <div class="form-group">
                            <h4 for="applications">Applications (Organizational)</h4>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="applications"
                                        value="web_social_media"> Websites and Social Media </input>
                                </label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="applications" value="stationery">
                                        Stationery </input>
                                </label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="applications"
                                        value="promotional_materials"> Promotional Materials and
                                        Objects </input>
                                </label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="applications"
                                        value="email_signatures"> Email Signatures </input>
                                </label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="applications" value="others">
                                        Others </input>
                                </label>
                            </div>
                        </div>

                        <!-- Si es para uso de bienes y servicios -->
                        <div class="form-group">
                            <h4 for="applications">Applications (Goods and Services)</h4>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="applications"
                                        value="product_labels"> Product Labels </input>
                                </label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="applications" value="packaging">
                                        Packaging </input>
                                </label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="applications"
                                        value="advertising_materials"> Advertising related to
                                        brands,products and services </input>
                                </label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="applications" value="others">
                                        Others </input>
                                </label>
                            </div>
                        </div>


                        <!-- Si es Evento -->
                        <div class="row">
                            <!-- First column -->
                            <div class="col-md-6">
                                <!-- Nombre del Evento -->
                                <div class="form-group">
                                    <label for="event_name">Event Name</label>
                                    <input type="text" name="event_name" class="form-control"
                                        maxlength="120" required="true" />
                                </div>

                                <!-- Duración del Evento -->
                                <div class="form-group">
                                    <label for="event_duration">Event Duration</label>
                                    <input type="text" name="event_duration" class="form-control"
                                        required="true" />
                                </div>

                                <!-- Modalidad del Evento -->
                                <div class="form-group">
                                    <label for="event_modality">Event Modality</label>
                                    <select name="event_modality" class="form-control"
                                        required="true">
                                        <option value="onsite">On-site</option>
                                        <option value="online">Online</option>
                                        <option value="hybrid">Hybrid</option>
                                    </select>
                                </div>

                                <!-- Sede del Evento -->
                                <div class="form-group">
                                    <label for="event_venue">Venue</label>
                                    <input type="text" name="event_venue" class="form-control"
                                        maxlength="120" required="true" />
                                </div>

                                <!-- Documentación del Evento -->
                                <div class="form-group mt-1 mb-1">
                                    <label for="event_documentation">Documentation</label>
                                    <input type="file" name="event_documentation"
                                        class="form-control-file"
                                        required="true" />
                                </div>
                            </div>
                            <!-- Second column -->
                            <div class="col-md-6">
                                <!-- País del Evento -->
                                <div class="form-group">
                                    <label for="event_country">Country</label>
                                    <select name="event_country" class="form-control"
                                        required="true">
                                        <!-- Populate dynamically -->
                                    </select>
                                </div>

                                <!-- Provincia del Evento -->
                                <div class="form-group">
                                    <label for="event_province">Province</label>
                                    <select name="event_province" class="form-control"
                                        required="true">
                                        <!-- Populate dynamically -->
                                    </select>
                                </div>

                                <!-- Municipio del Evento -->
                                <div class="form-group">
                                    <label for="event_municipality">Municipality</label>
                                    <select name="representative_municipality" class="form-control"
                                        required="true">
                                        <!-- Populate dynamically -->
                                    </select>
                                </div>

                                <!-- Ámbito -->
                                <div class="form-group">
                                    <label for="event_scope">Scope</label>
                                    <select name="event_scope" class="form-control" required="true">
                                        <option value="national">National</option>
                                        <option value="international">International</option>
                                    </select>
                                </div>
                            </div>
                        </div>


                        <!-- Botón de Enviar -->
                        <div class="form-group mt-4 mb-4">
                            <button type="submit" class="btn btn-primary">Submit Application</button>
                        </div>
                    </form>
                </div>
            </t>
        </template>
    </data>
</odoo>